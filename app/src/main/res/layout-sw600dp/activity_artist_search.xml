<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dual_pane"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/artist_search_fragment"
        android:name="com.example.android.danga.spotifystreamer.app.ArtistSearchFragment"
        tools:layout="@layout/fragment_artist_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        tools:context="com.example.android.danga.spotifystreamer.app.ArtistSearchFragment"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/spotify_text_color_black"/>

    <FrameLayout
        android:id="@+id/detail_topten_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6">
    </FrameLayout>

</LinearLayout>